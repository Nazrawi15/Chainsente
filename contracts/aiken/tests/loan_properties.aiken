(use aiken/fuzz)
(use ../src/LoanTypes.aiken)

(test collateral_usd_sample
  (let ((v (collateral_usd_cents 2000000 1023)))
    (>= v 0)))

(test compute_ltv_sample
  (== (compute_ltv_bp 100000 200000) 5000))

(test fuzz_ltv(a via fuzz.int() b via fuzz.int())
  (if (and (> a 0) (> b 0))
    (== (compute_ltv_bp a b) (/ (* a 10000) b))
    True))
